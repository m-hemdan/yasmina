<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yasmina.splashActivity">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/logo_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/pro_txt"
                android:src="@drawable/app_icon" />

            <TextView xmlns:font="http://schemas.android.com/apk/lib/com.thoughtworks.retailshop.util"
                android:id="@+id/pro_txt"
                style="@style/TextAppearance.AppCompat.Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/logo_img"
                android:layout_centerHorizontal="true"
                android:shadowColor="#000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1.0"
                android:text="@string/app_name"
                android:textColor="#fff"
                android:textSize="40sp"
                android:textStyle="bold"
                font:ttf_name="paranoid.ttf" />
            <TextView
                android:id="@+id/track_txt"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/pro_txt"
                android:layout_below="@+id/pro_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1.0"
                android:text="Welcome"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </RelativeLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>